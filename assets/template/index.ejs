<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8" />
    <title>Иконки</title>
    <link rel="stylesheet" href="main.css" type="text/css" />
</head>
<body>
    <% if (Object.keys(categories).length === 0) { %>
        <div>
            <h2>Иконок нет</h2>
        </div>
    <% } %>
    <div class="icons">
        <% for (let categoryName in categories) { %>
            <div>
                <h2 class="icons_category-title"><%= categoryName %></h2>
                <% if (Object.values(categories).length > 0) { %>
                    <div class="icons_list">
                        <% for (const icon in categories[categoryName]) { %>
                            <% const iconRef = categories[categoryName][icon]; %>
                            <div class="icons_container" data-sizeless="<%= Number(iconRef.sizeless) %>" data-sizes="<%= JSON.stringify(iconRef.sizes) %>">
                                <div class="icons_svg">
                                    <img src="icons/<%= iconRef.sizes[0].fullPath %>" width="36px" />
                                </div>
                                <%= iconRef.name %>
                            </div>
                        <% } %>
                    </div>
                <% } %>
            </div>
        <% } %>
    </div>
    <div class="icons_info">
        <div class="icons__info-icons">
            <div class="icons__info-icon-wrapper">
            </div>
        </div>
        <div class="icons__info-close">
            <svg viewBox="0 0 40 40"><path fill-rule="evenodd" clip-rule="evenodd" d="M20 18.6l6.4-6.4 1.4 1.4-6.4 6.4 6.4 6.4-1.4 1.4-6.4-6.4-6.4 6.4-1.4-1.4 6.4-6.4-6.4-6.4 1.4-1.4z"></path></svg>
        </div>
    </div>
    <script type="text/javascript" src="main.js"></script>
</body>
</html>
